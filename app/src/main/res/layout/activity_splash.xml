<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SplashActivity">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="@dimen/dimens_0dp"
        android:layout_height="wrap_content"
        android:id="@+id/splashText"
        android:textStyle="bold"
        android:textSize="@dimen/dimens_20dp"
        android:layout_marginTop="@dimen/dimens_50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/welcometoapplication"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/splash"
        app:layout_constraintEnd_toEndOf="@id/splash"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginStart="@dimen/dimens_30dp"
        android:layout_marginEnd="@dimen/dimens_30dp"
        android:id="@+id/splash"
        android:layout_width="@dimen/dimens_0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/userimage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>