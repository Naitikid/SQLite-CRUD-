<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimens_16dp"
    app:cardCornerRadius="@dimen/dimens_10dp"
    app:cardElevation="@dimen/dimens_16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimens_16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nameUserdesigh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:text="@string/name"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@id/editbtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/phoneNumberUserDesigh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimens_8dp"
            android:text="@string/phonenumber"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/nameUserdesigh"
            app:layout_constraintStart_toStartOf="@id/nameUserdesigh"
            app:layout_constraintTop_toBottomOf="@id/nameUserdesigh" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/editbtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_0dp"
            android:background="@android:color/transparent"
            android:src="@drawable/user_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/nameUserdesigh" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/deletebtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_0dp"
            android:background="@android:color/transparent"
            android:src="@drawable/user_delete"
            app:layout_constraintEnd_toEndOf="@id/editbtn"
            app:layout_constraintTop_toTopOf="@id/phoneNumberUserDesigh" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>